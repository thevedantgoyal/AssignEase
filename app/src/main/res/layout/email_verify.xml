<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_140sdp"
    android:elevation="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Beige"
        >
        <ImageView
            android:id="@+id/correct_account_img"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_34sdp"
            android:src="@drawable/check"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/acount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Created"
            android:textColor="@color/Darkblue"
            android:fontFamily="@font/amaranth"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/correct_account_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_6sdp"
            />

        <TextView
            android:id="@+id/acount_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please check your email to verify your email"
            android:textColor="#354F76"
            android:fontFamily="@font/amaranth"
            android:textSize="@dimen/_12ssp"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/acount_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_6sdp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/account_btn"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:backgroundTint="@color/darkpink"
            android:textColor="@color/Beige"
            android:fontFamily="@font/amaranth"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/acount_txt2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_8sdp"

            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>