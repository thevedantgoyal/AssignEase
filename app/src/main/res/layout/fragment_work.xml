<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rm309_adj_09"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.WorkFragment">


    <TextView
        android:id="@+id/works_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Works"
        android:textColor="@color/Darkblue"
        android:textStyle="bold"
        android:textSize="@dimen/_22ssp"
        android:fontFamily="@font/amaranth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        />

    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/left_arrow"
      android:layout_marginStart="@dimen/_12sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        />

    <TextView
        android:visibility="gone"
        android:id="@+id/worksTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:fontFamily="@font/amaranth"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="No any Work has been assigned "
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/works_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_18sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/works_txt"
        />



    <!--    <androidx.appcompat.widget.Toolbar-->
<!--        android:id="@+id/tb_workfragment"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="@dimen/_42sdp"-->
<!--        app:title="Works"-->
<!--        app:titleTextColor="@color/Beige"-->
