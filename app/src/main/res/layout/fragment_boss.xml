<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rm309_adj_09"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.EmployeeFragment">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/EmpProfileImg"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:scaleType="centerCrop"
        android:src="@color/Darkblue"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/boss_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boss"
        android:textColor="@color/Darkblue"
        android:textStyle="bold"
        android:textSize="@dimen/_22ssp"
        android:fontFamily="@font/amaranth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        />
    <ImageView
        android:id="@+id/logoutBtn3"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/boss_Rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boss_txt"
        />
</androidx.constraintlayout.widget.ConstraintLayout>